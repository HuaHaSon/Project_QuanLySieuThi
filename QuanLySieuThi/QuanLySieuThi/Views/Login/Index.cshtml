
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/main_css.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/Login.js"></script>
    <title>Đăng nhập</title>
</head>
<body>
    <div class="card col-lg-4 offset-lg-4" style="margin-top:80px">
        <div class="card-body">
            <h5 class="center_text"><b>ĐĂNG NHẬP</b></h5>           
            <div>
                <form id="form">
                    <div class="form-group">
                        <label for="tk"><b>Tên tài khoản:</b></label>
                        <input type="text" class="form-control" id="tk" placeholder="Nhập tên tài khoản....">
                    </div>
                    <div class="form-group">
                        <label for="pwd"><b>Mật khẩu:</b></label>
                        <input type="password" class="form-control" id="pwd" placeholder="Nhập mật khẩu....">
                    </div>
                    <div class="center_text">
                        <button type="submit" class="btn btn-danger col-lg-7">ĐĂNG NHẬP</button>
                    </div>

                </form>
            </div>
            
        </div>
    </div>
</body>
</html>
